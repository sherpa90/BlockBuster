<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <%= render @client %>
    </div>

    <div class="card-footer">
      <%= link_to "Edit this client", edit_client_path(@client), class: "btn btn-primary" %>
      <%= link_to "Back to clients", clients_path, class: "btn btn-secondary" %>
      <%= button_to "Destroy this client", @client, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
